<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %> for <%= @order.email %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <header class="page-header">
    <% @order.line_items.each do |line_item| %>
      <img src="<%=line_item.product.image%>"/>
      <p>Product Name: <%= line_item.product.name %></p>
      <p>Description: <%= line_item.product.description %></p>
      <p>Quantity: <%= line_item.quantity %></p>
      <p>Line Item Total: <%= humanized_money_with_symbol line_item.total_price_cents/100 %></p>
    <% end %>
    <p>Order Total: <%= humanized_money_with_symbol @order.total_cents/100 %></p>
  </header>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
