
<header class="page-header">
  <h1>Signup</h1>
</header>

<%= form_for :user, url: '/users' do |f| %>
  <h5>Name: &emsp; <%= f.text_field :name %></h5>
  <h5>Email: &emsp; <%= f.text_field :email %></h5>
  <h5>Password: <%= f.password_field :password %></h5>
  <h5>Confirm Password: <%= f.password_field :password_confirmation %></h5>
  <%= f.submit "Sign up" %>
<% end %>